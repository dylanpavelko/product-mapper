<p><%= @node_label %><%= @node_context.name %> <button class="btn btn-sm btn-default pull-right" style="background-color:white;"><%= @button_text %></button></p><br/>

<div class="panel panel-default">
  <input type="text" class="form-control" placeholder="Search..." >
  <div class="panel-body">

  <ol class="breadcrumb">
  <li><a href="#"><%= @node_context.parent.parent.name %></a></li>
  <li class="active"><%= @node_context.parent.name %></li>
  </ol>
    <!-- Table -->
  <table class="table table-hover">
    <% @node_context.parent.children.each do |child|%>
      <tr <% if child.id == @node_context.id %> class="info" <% end %> >
        <td><%= child.name %><% if child.children != nil and child.children.count > 0 %> > <% end %></td>
        <td><a href>Select</a></td></tr>
    <% end %>
  </table>
  <a href class="pull-right">Cancel</a>
  </div>
</div>