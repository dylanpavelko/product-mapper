

    <h1>Backlog for <%= @node.name %> - <%= link_to "Back to Node", @node %></h1> 

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <th>Feature</th>
        <th>Specification</th>
        <th>Current Dependencies</th>
        <th>Issues</th>
        <th>Priority</th>
        <th>Done?</th>
        <th>Added</th>
      <% @terminalNodes.each do |child|  %>
        <tr>
          <% if child.nodeType.feature or child.nodeType.feature_organizer %>
            <td><%= link_to child.name, child %></td>
            <td></td>
          <% else %>
            <td><%= link_to child.get_feature.name, child.get_feature %></td>
            <td><%= link_to child.name, child %></td>
          <% end %>
          <td></td>
          <td></td>
          <td></td>
          <td><%= child.status %></td>
          <td><%= child.created_at.strftime('%m/%d/%Y')%></td>
        </tr>
      <% end %>
    </table>
</div>