<h1>Listing git_hub_repos</h1>

<table>
  <thead>
    <tr>
      <th>Repo</th>
      <th>Node</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @git_hub_repos.each do |git_hub_repo| %>
      <tr>
        <td><%= git_hub_repo.repo %></td>
        <td><%= git_hub_repo.node %></td>
        <td><%= git_hub_repo.user %></td>
        <td><%= link_to 'Show', git_hub_repo %></td>
        <td><%= link_to 'Edit', edit_git_hub_repo_path(git_hub_repo) %></td>
        <td><%= link_to 'Destroy', git_hub_repo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add GitHub Repository', new_git_hub_repo_path %>
