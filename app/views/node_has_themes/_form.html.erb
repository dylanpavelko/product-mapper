<%= form_for(@node_has_theme) do |f| %>
  <% if @node_has_theme.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@node_has_theme.errors.count, "error") %> prohibited this node_has_theme from being saved:</h2>

      <ul>
      <% @node_has_theme.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :node_id %>: <%= @node_has_theme.node.name %>
    <%= f.hidden_field :node_id, :value => @node_has_theme.node.id %>
  </div>
  <div class="field">
    <%= f.label :theme_id %><br>
    <% if @node_has_theme.theme == nil %>
      <%= f.select :theme_id, options_from_collection_for_select(Theme.all.sort_by {|t| t.name}, :id, :name), {:include_blank => true}, {:class => "form-control"} %>
    <% else %>
      <%= f.select :theme_id, options_from_collection_for_select(Theme.all.sort_by {|t| t.name}, :id, :name, @node_has_theme.theme.id), :include_blank => true %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit "Add Theme", :class => "btn btn-success" %>
  </div>
<% end %>
