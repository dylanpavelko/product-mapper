<h1>Listing question_has_responses</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Response</th>
      <th>Answers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_has_responses.each do |question_has_response| %>
      <tr>
        <td><%= question_has_response.question %></td>
        <td><%= question_has_response.response %></td>
        <td><%= question_has_response.answers %></td>
        <td><%= link_to 'Show', question_has_response %></td>
        <td><%= link_to 'Edit', edit_question_has_response_path(question_has_response) %></td>
        <td><%= link_to 'Destroy', question_has_response, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

