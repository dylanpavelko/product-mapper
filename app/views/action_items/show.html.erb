<p id="notice"><%= notice %></p>

<% if @action_item.action_from_agenda_item != nil %>
<ol class="breadcrumb">
    <li>
      <%= link_to @action_item.action_from_agenda_item.meeting.display, @action_item.action_from_agenda_item.meeting %>
    </li>
  <li> 
    <%= link_to @action_item.action_from_agenda_item.name, @action_item.action_from_agenda_item %>
  </li>
</ol>
<% end %>

<h3><%= @action_item.name %></h3>

<p>
  <%= @action_item.description %>
</p>

<p>
  <strong>Complete:</strong>
  <%= @action_item.complete %>
</p>

<p>
  <strong>Completed:</strong>
  <%= @action_item.completed %>
</p>

<p>
  <strong>Due override:</strong>
  <%= @action_item.due_override %>
</p>

<% if @action_item.due_by_meeting != nil %>
  <p>
    <strong>Due by meeting:</strong>
      <%= link_to @action_item.due_by_meeting.display, @action_item.due_by_meeting %>
  </p>
<% end %>


<%= link_to 'Edit', edit_action_item_path(@action_item) %> |
<%= link_to 'Back', action_items_path %>
