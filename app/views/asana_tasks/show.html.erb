<% @native_issues.each do |has_native| %>
<ol class="breadcrumb">
  <li><%= link_to "Issue With: " + has_native.native_issue.issue_with.name, has_native.native_issue.issue_with %></li>
  <li><%= link_to "Native Issue: " + has_native.native_issue.summary, has_native.native_issue %></li>
</ol>
<% end %>

<p id="notice"><%= notice %></p>

<img src="http://www.freelogovectors.net/wp-content/uploads/2015/11/asana-logo1.jpg" width="250"/>
<p>
  <strong><%= @asana_task.name %> </strong>  <%= link_to "(View in Asana)", @asana_task.url, :target => "_blank" %>
</p>

<p>
  <strong>Asana workspace:</strong>
  <%= @asana_task.asana_workspace_id %>
</p>

<p>
	<strong>Asana Derived ID</strong>
	<%= @asana_task.derived_id %>
</p>


<% @asana = @asana_task.get_task_data_from_asana %>
<strong>Asana</strong>
<%= @asana.name %>
<br/>
<strong>Notes</strong>
<%= simple_format @asana.notes %>

<br/>
<strong>Completed?</strong> <%= @asana.completed %><br/>
<% if @asana.assignee != nil %>
	<strong>Assignee</strong> <%= @asana.assignee["name"] %>
<% end %>

<br/>

<%= link_to 'Edit', edit_asana_task_path(@asana_task) %> |
<%= link_to 'All Asana Tasks', asana_tasks_path %>
