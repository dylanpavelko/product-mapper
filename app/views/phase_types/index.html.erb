<h1>Listing phase_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @phase_types.each do |phase_type| %>
      <tr>
        <td><%= phase_type.name %></td>
        <td><%= link_to 'Show', phase_type %></td>
        <td><%= link_to 'Edit', edit_phase_type_path(phase_type) %></td>
        <td><%= link_to 'Destroy', phase_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

